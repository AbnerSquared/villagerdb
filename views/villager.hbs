<h1>{{name}}</h1>
<div class="row">
    <div class="col-sm-12 col-md-4 order-md-12 order-sm-1">
        <div class="text-center">
            <a target="_blank" href="/images/villagers/full/{{id}}.png">
                <img src="/images/villagers/full/{{id}}.png" alt="{{name}}'s picture"
                     style="max-width: 200px; max-height: 200px;"/>
            </a>
        </div>
        <table class="table table-borderless mt-3">
            <thead>
            <th class="sr-only">Property</th>
            <th class="sr-only">Value</th>
            </thead>
            <tbody>
            <tr>
                <td class="bg-dark text-light">Species</td>
                <td>{{species}}</td>
            </tr>
            <tr>
                <td class="bg-dark text-light">Gender</td>
                <td>{{gender}}</td>
            </tr>
            <tr>
                <td class="bg-dark text-light">Birthday</td>
                <td>{{birthday}} ({{zodiac}})</td>
            </tr>
            </tbody>
        </table>
        <table class="table table-borderless">
            <thead class="bg-dark text-light">
            <th>Appears In</th>
            </thead>
            <tbody>
            <tr>
                <td>
                    <ul class="list-unstyled">
                        {{#each games}}
                            <li>{{title}}</li>
                        {{/each}}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-12 col-md-8 order-md-1 order-sm-12">
        <h2>Summary</h2>
        <p>{{paragraph}}</p>

        {{> villagerGameData shouldDisplay=hasPersonalities title="Personality Information" valueName="personality"
            array=personalities}}

        {{> villagerGameData shouldDisplay=hasClothing title="Clothing" valueName="Clothes" array=clothing}}

        {{> villagerGameData shouldDisplay=hasPhrases title="Phrases" valueName="Phrase" array=phrases }}

        {{> villagerGameData shouldDisplay=hasSongs title="Songs" valueName="Song" array=songs }}
    </div>
</div>