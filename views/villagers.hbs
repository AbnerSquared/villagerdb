<h1>
    {{#if resultSet.isSearch}}
        Search results for '{{resultSet.searchQuery}}'
    {{else}}
        All villagers
    {{/if}}
</h1>

{{> searchBar resultSet=resultSet placeholder="Ener a villager name" }}

{{#if resultSet.hasResults}}
    {{> pagination resultSet=resultSet }}
    <div class="table-responsive">
        <table class="table table-striped table-bordered result-set">
            <thead>
            <th>Picture</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Species</th>
            <th>Birthday</th>
            </thead>
            <tbody>
            {{#each resultSet.results}}
                <tr>
                    <td class="result-image">
                        <a href="/villager/{{this.id}}">
                            <img src="/images/villagers/thumb/{{this.id}}.png" alt="Picture of {{this.name}}"
                                 class="img-responsive"/>
                        </a>
                    </td>
                    <td>
                        <a href="/villager/{{this.id}}">
                            {{this.name}}
                        </a>
                    </td>
                    <td>
                        {{this.gender}}
                    </td>
                    <td>
                        {{this.species}}
                    </td>
                    <td>
                        {{this.birthday}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    {{> pagination resultSet=resultSet }}
{{else}}
    <p>There were no results for your search.</p>
{{/if}}

